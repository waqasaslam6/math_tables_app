<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">


        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">


            <solid android:color="#E2F0ED"/>

            <corners android:radius="20dp"/>

            <size android:height="28dp"
                android:width="50dp"/>

        </shape>
    </item>


    <item android:state_checked="true"
        android:gravity="end">


        <shape android:dither="true" android:shape="oval"
            android:useLevel="false" android:visible="true">

<!--            <solid android:color="@color/colorPrimary"/>-->


            <gradient
                android:endColor="@color/colorPrimary"
                android:centerColor="@color/center_color"
                android:startColor="@color/colorPrimaryDark" />

            <corners android:radius="15dp" />
            <size android:width="25dp" android:height="25dp" />
            <stroke android:width="4dp" android:color="#0000ffff" />
        </shape>

    </item>


</layer-list>